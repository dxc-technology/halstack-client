{
  "compilerOptions": {
    "jsx": "react-jsx", // Importante: Habilitar el soporte para JSX
    "moduleResolution": "node",
    "target": "esnext",
    "module": "esnext",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "allowJs": true
  },
  "include": ["src/**/*"]
}
